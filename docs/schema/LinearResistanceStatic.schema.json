{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://deltares.github.io/Ribasim/schema/LinearResistanceStatic.schema.json",
    "title": "LinearResistanceStatic",
    "description": "A LinearResistanceStatic object based on Ribasim.LinearResistanceStaticV1",
    "type": "object",
    "properties": {
        "node_id": {
            "format": "default",
            "type": "integer"
        },
        "active": {
            "format": "default",
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "boolean"
                }
            ]
        },
        "resistance": {
            "format": "double",
            "type": "number"
        },
        "control_state": {
            "format": "default",
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "remarks": {
            "description": "a hack for pandera",
            "type": "string",
            "format": "default",
            "default": ""
        }
    },
    "required": [
        "node_id",
        "resistance"
    ]
}
