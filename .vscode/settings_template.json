{
    "[julia]": {
        "editor.formatOnSave": true
    },
    "julia.environmentPath": "core",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        }
    },
    "python.formatting.provider": "black",
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "ruff.args": [
        "--config",
        "python/pyproject.toml"
    ]
}
